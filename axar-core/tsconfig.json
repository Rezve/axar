{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "es6",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
